<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.hfh5sdk.MainActivity" >

    <Button 
	                android:id="@+id/btn_wechat"
	               	android:layout_width="fill_parent"
        			android:layout_height="wrap_content"
        			android:onClick="onWechatPay"
	                android:text="微信支付"
	                />
	            
	            <Button 
	                android:id="@+id/btn_alipay"
	               	android:layout_width="fill_parent"
        			android:layout_height="wrap_content"
        			android:onClick="onAlipayPay"
	                android:text="支付宝支付"
	                />
	            
	            <Button 
	                android:id="@+id/btn_wapCashier"
	               	android:layout_width="fill_parent"
        			android:layout_height="wrap_content"
        			android:onClick="onWapCashierPay"
	                android:text="唤起WAP收银台支付"
	                />
	            
	             <Button 
	                android:id="@+id/btn_protoCashier"
	               	android:layout_width="fill_parent"
        			android:layout_height="wrap_content"
        			android:onClick="onProtoCashierPay"
	                android:text="唤起原生收银台支付"
	                />

</LinearLayout>
